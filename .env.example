# NexRisk BFF Configuration
# Copy to .env and adjust values for your environment

# Server
PORT=8080
HOST=127.0.0.1
NODE_ENV=development

# NexRisk C++ API
NEXRISK_API_URL=http://127.0.0.1:8090
NEXRISK_API_TIMEOUT_MS=30000

# Authentication (OIDC/Keycloak)
AUTH_ENABLED=false
AUTH_ISSUER_URL=http://localhost:8180/realms/nexrisk
AUTH_CLIENT_ID=nexrisk-ui
AUTH_AUDIENCE=nexrisk-api
JWT_SECRET=dev-secret-change-in-production

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# WebSocket
WS_HEARTBEAT_INTERVAL_MS=30000
WS_MAX_CONNECTIONS_PER_USER=5
